<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.citrus.screenorientationmanually.MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_portrait"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="italic"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:shadowColor="@color/colorAccent"
        android:text="@string/button_portrait"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:id="@+id/portrait_button"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_landscape"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="italic"
        android:layout_marginTop="20dp"/>
    
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:shadowColor="@color/colorAccent"
        android:text="@string/button_landscape"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:id="@+id/landscape_button"/>
    
</LinearLayout>
